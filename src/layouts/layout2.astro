---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <header>
            <div class="logo-container">
              <a href="/"><img src="../icons/logo.svg" alt="Your logo"></a>
            </div>
            <nav class="mobile-nav">
              <a href="#">Menu</a>
            </nav>
            <div class="icon-container">
              <img src="your-icon-image-url" alt="Your icon">
            </div>
          </header>
          <div class="overlay">
            <nav class="overlay-nav">
              <a href="#">Link 1</a>
              <a href="#">Link 2</a>
              <a href="#">Link 3</a>
            </nav>
            <div class="overlay-close">
              <img src="your-close-icon-image-url" alt="Close icon">
            </div>
          </div>          
        <slot />
        <footer>

        </footer>
    </body>
</html>

<style>
/* ------------------------- Custom-properties ------------------------------ */
html {
	--main-bg-color: #F6EEEE;

}

/* Nulstilling af margin og padding på alle elementer, samt ændring af box model på alle elementer */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}


/* Normalisering af font og linjehøjde på dokumentets tekster, samt nedtoning af tekstfarven */
body {
  font-family: system-ui, sans-serif;
  line-height: 1.6;
  color: #2d2d2d;
  background-color: var(--main-bg-color);
}

 

/* Normalisering af billeder */
img {
  width: 100%;
  height: auto;
  display: block;
}


/* -------------------------- Menu -------------------------------- */
/* Mobile styles */

header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff; /* Replace with your desired background color */
  padding: 10px;
}

.logo-container {
  flex-grow: 1;
}

.logo-container img {
  width: 70px; /* Replace with your desired logo size */
}

nav.mobile-nav {
  display: none;
}

.icon-container {
  margin-left: 10px;
}

.overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8); /* Replace with your desired overlay color and transparency */
}

.overlay-nav {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.overlay-nav a {
  color: #fff; /* Replace with your desired link color */
  font-size: 24px; /* Replace with your desired font size */
  margin-bottom: 20px;
}

.overlay-close {
  position: absolute;
  top: 10px;
  right: 10px;
}

.overlay-close img {
  width: 30px; /* Replace with your desired close icon size */
}

/* Desktop styles */

@media (min-width: 768px) {
  .icon-container {
    display: none;
  }

  nav.mobile-nav {
    display: flex;
  }

  .overlay {
    display: none;
  }

  header {
    padding: 20px;
  }

  nav.mobile-nav {
    display: flex;
  }

  nav.mobile-nav a {
    color: #000; /* Replace with your desired link color */
    font-size: 20px; /* Replace with your desired font size */
    margin-left: 20px;
  }
}

</style>

<script>
const icon = document.getElementById('icon');
const overlay = document.getElementById('overlay');
const closeIcon = document.getElementById('close-icon');

icon.addEventListener('click', () => {
    console.log('clicked');
  overlay.style.display = 'block';
});

closeIcon.addEventListener('click', () => {
  overlay.style.display = 'none';
});
</script>